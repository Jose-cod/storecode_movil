<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_h4"
    >

    <LinearLayout
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/a8dp"
        android:background="@drawable/shape_background_cardview"
        >


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >

            <TextView
                android:fontFamily="@font/lato"
                android:id="@+id/tvPurchaseDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Compra"
                android:gravity="start"
                android:textSize="14sp"
                android:textColor="@color/negro"
                android:visibility="visible"
                />

            <TextView
                android:fontFamily="@font/lato"
                android:id="@+id/tvDatePurchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de compra: "
                android:gravity="start"
                android:textSize="14sp"
                android:textColor="@color/colorBackground"
                android:visibility="visible"
                />

            <TextView
                android:fontFamily="@font/lato"
                android:id="@+id/tvClaveTransaccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clave TransacciÃ³n: "
                android:gravity="start"
                android:textSize="14sp"
                android:textColor="@color/colorBackground"
                android:visibility="visible"
                />
            <TextView
                android:fontFamily="@font/lato"
                android:id="@+id/tvMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monto: $"
                android:gravity="start"
                android:textSize="14sp"
                android:textColor="@color/px_green_status_bar"
                android:layout_marginTop="@dimen/a8dp"
                android:visibility="visible"
                />






        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>